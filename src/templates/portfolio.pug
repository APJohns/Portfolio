    +microProject({
      name: "Wes Bos | Catch of the Day",
      tech: ["HTML", "CSS", "Javascript", "React", "Firebase"],
      image: "./media/sites/catch.png",
      link: "https://catch-of-the-day-ash.netlify.com/"
    })
    +microProject({
      name: "Level Up Tuts | MovieDB",
