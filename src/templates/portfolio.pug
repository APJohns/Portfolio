    })
    +microProject({
      name: "Solar System",
      tech: ["HTML", "CSS", "Javascript", "Gulp"],
      image: "./media/sites/solar.png",
      link: "https://thenextfrontier.netlify.com/"
    })
    +microProject({
      name: "Audio Visualizer",
      tech: ["HTML", "CSS", "Javascript", "Canvas API", "Web Audio API"],
      image: "./media/sites/audio.png",
      link: "https://apjohns.github.io/audio-visualizer/"
    })
    +microProject({
      name: "Local Notes",
      tech: ["HTML", "CSS", "Javascript", "LocalStorage", "Sass", "Gulp"],
      image: "./media/sites/local-notes.png",
      link: "https://local-note.netlify.com/"
    })
    +microProject({
