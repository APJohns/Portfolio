mixin headerContent(title, subTitle, image)
  .col-md-8
    h1= title
    if subTitle
      p.sub-title= subTitle

  if image
    .col-md-4.d-none.d-md-block
      // Decorative image
      img.hero-image(src=image alt='' aria-hidden='true')

mixin header(title, subTitle, image)
  header.site-header.pt-4.pb-4.pb-md-5
    .container
      nav.row.justify-content-between.align-items-center.mb-4.mb-md-5
        .col-auto
          a(href='./' aria-label='Home page').logo
            span(aria-hidden='true')
              include svgs/logo.svg
            .logo-text(aria-hidden='true') Ash
              br
              | Johns
        .col-auto.ml-auto.nav-links
          .row
            .col-auto
              a(href='#about') About
            .col-auto
              a(href='#portfolio') My Work
            .col-auto
              .switch
                input#darkModeToggle(type='checkbox')
                label#darkModeToggleLabel(for='darkModeToggle' aria-label='Dark mode')
                  include svgs/sun.svg
                  include svgs/moon.svg
      if image
        .row.align-items-center.my-4.my-md-5
          +headerContent(title, subTitle, image)
      else
        .row.align-items-center.my-2
          +headerContent(title, subTitle, image)